{
    "manifest_version": 2,
    "name": "monospace",
    "version": "0",
    "description": "A plain text description",

    "web_accessible_resources": [
        "app.js",
        "message.js",
        "sm.js",
        "highlight/highlight.pack.js"
    ],

    "content_scripts": [{
        "matches": ["http://*.facebook.com/*", "https://*.facebook.com/*"],
        "css": ["main.css", "highlight/styles/default.css"],
        "js": ["background.js"]
    }]
}